<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_or_edit_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.fbr.fbmassenger.Activities.CreateOrEditMessage"
    tools:showIn="@layout/activity_create_or_edit_message">

    <LinearLayout
        android:id="@+id/emojies"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/happy_feel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/happy"/>

        <ImageButton
            android:id="@+id/confused_feel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/confused" />

        <ImageButton
            android:id="@+id/suprised_feel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/surprised" />

        <ImageButton
            android:id="@+id/tongue_feel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tongue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/emojies">

    <EditText
        android:id="@+id/message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emojies"
        android:hint="Your message"
        android:textSize="25sp"
        android:layout_weight="2"/>

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_send_white_36dp"
            android:scaleType="fitCenter"
            android:padding="5dp"

            android:background="@color/colorPrimary"
            android:layout_weight="15"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>
